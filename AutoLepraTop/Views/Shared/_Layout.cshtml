@using System.Activities.Expressions
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/semantic")
    </head>
    <body>
        <div class="ui menu">
            <a class="item" href="@Url.Action("SortByVote","Home")">
                <i class="plus sign icon"></i> Sort by rating
            </a>
            <a class="item" href="@Url.Action("SortByDate","Home")">
                <i class="calendar icon"></i> Sort by date
            </a>
            <div class="right menu">
                <div class="item">
                    <div class="ui pagination menu">
                        <a class="icon item" href="@Url.Action("Page", "Home", new {@page = 0})">
                            <i class="left arrow icon"></i>
                            <i class="left arrow icon"></i>
                        </a>
                        <a class="icon item" href="@Url.Action("Page", "Home", new { @page = Model.PageNumber - 1 })">
                            <i class="left arrow icon"></i>
                        </a>
                        <div class="disabled item">
                            @Model.PageNumber
                        </div>
                        <a class="icon item" href="@Url.Action("Page", "Home", new { @page = Model.PageNumber + 1 })">
                            <i class="right arrow icon"></i>
                        </a>
                        <a class="icon item" href="@Url.Action("Page", "Home", new { @page = Model.PagesCount - 1 })">
                            <i class="right arrow icon"></i>
                            <i class="right arrow icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        @{
            string path = Server.MapPath("~/Content/byVote.json");
            var fi = new FileInfo(path);
        }
        Last time parsed at: @fi.CreationTimeUtc
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/semantic")
        @RenderSection("scripts", false)
        @*------Yandex metrics-------------------*@
        <!-- Yandex.Metrika counter -->
        <script type="text/javascript">
            (function(d, w, c) {
                (w[c] = w[c] || []).push(function() {
                    try {
                        w.yaCounter26766504 = new Ya.Metrika({
                            id: 26766504,
                            webvisor: true,
                            clickmap: true,
                            trackLinks: true,
                            accurateTrackBounce: true
                        });
                    } catch (e) {
                    }
                });

                var n = d.getElementsByTagName("script")[0],
                    s = d.createElement("script"),
                    f = function() { n.parentNode.insertBefore(s, n); };
                s.type = "text/javascript";
                s.async = true;
                s.src = (d.location.protocol == "https:" ? "https:" : "http:") + "//mc.yandex.ru/metrika/watch.js";

                if (w.opera == "[object Opera]") {
                    d.addEventListener("DOMContentLoaded", f, false);
                } else {
                    f();
                }
            })(document, window, "yandex_metrika_callbacks");
        </script>
        <noscript><div><img src="//mc.yandex.ru/watch/26766504" style="left: -9999px; position: absolute;" alt="" /></div></noscript>
        <!-- /Yandex.Metrika counter -->
        @*---------------------------------------*@
        
    </body>
</html>